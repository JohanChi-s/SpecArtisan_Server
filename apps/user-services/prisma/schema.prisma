datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  createdAt    DateTime  @default(now())
  email        String    @unique
  firstName    String?
  id           String    @id @default(cuid())
  isActive     Boolean?
  isAdmin      Boolean
  isViewer     Boolean?
  language     String?
  lastActiveAt DateTime? @updatedAt
  lastName     String?
  password     String
  profileId    String
  roles        Json
  updatedAt    DateTime  @updatedAt
  username     String    @unique
}

model Team {
  avatarUrl       String?
  canComment      Boolean?
  canShare        Boolean?
  createdAt       DateTime @default(now())
  defaultUserRole String?
  id              String   @id @default(cuid())
  inviteRequired  Boolean?
  name            String?
  subDomain       String?
  theme           String?
  updatedAt       DateTime @updatedAt
  url             String?
  workspaceId     String?
}

model Workspace {
  createdAt DateTime @default(now())
  domain    String?
  id        String   @id @default(cuid())
  isPublic  Boolean?
  name      String
  updatedAt DateTime @updatedAt
  url       String?
}

model Profile {
  address   String?
  age       Int?
  avatarUrl String?
  createdAt DateTime @default(now())
  fullName  String?
  id        String   @id @default(cuid())
  updatedAt DateTime @updatedAt
  userId    String   @unique
}
